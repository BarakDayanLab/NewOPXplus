{
    "stop_experiment": {
        "description": "Stops experiment",
        "callback": "stop_experiment",
        "keys": ["escape", "Q", "q", "ctrl+q"]
    },
    "pause_unpause": {
        "description": "Toggles Pauses/Unpause, for taking of measurements",
